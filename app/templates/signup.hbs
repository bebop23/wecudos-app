<div class="top-offset sign-up">
	<div class="img-cover"></div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
				<div>
					<h1>Create a free account</h1>
				</div>
				<div class="sign-up-form">
					<div class="input-group input-group-lg">
						  <span class="input-group-addon">
						  	<img class="user" src="images/rich-input-icon.png"/>
						  </span>
						  <input type="text" class="form-control" placeholder="First Name">
					</div>
					<div class="validate-message">

					</div>
					<div class="input-group input-group-lg">
						  <span class="input-group-addon">
						  	<img class="email" src="images/rich-input-icon.png"/>
						  </span>
						  <input type="text" class="form-control" placeholder="Email">
					</div>
					<div class="validate-message">

					</div>
					<div class="input-group input-group-lg">
						  <span class="input-group-addon">
						  	<img class="password" src="images/rich-input-icon.png"/>
						  </span>
						  <input type="text" class="form-control" placeholder="Password">
					</div>

					<div class="validate-message">

					</div>
					{{#link-to 'triage' classNames='btn btn-default'}}Sign Up{{/link-to}}
					<!-- <button type="button" class="btn btn-default">Sign Up</button> -->
				</div>
				
				<div class="divider">OR</div>	

				<div>
					<button type="button" class="fb-btn btn btn-default">
						<i class="icon-facebook"></i>
						Sign Up</button>
				</div>	

			</div>
		</div>
	</div>
</div>
